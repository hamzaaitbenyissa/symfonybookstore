{% extends 'base.html.twig' %}

{% block title %}Genre
{% endblock %}

{% block body %}
	<h1>Genre</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ genre.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ genre.nom }}</td>
			</tr>

			<tr>
				<th>Livres</th>
				{% for livre in genre.livres %}
					<td>{{ livre }}</td>
				{% endfor %}
			</tr>

		</tbody>
	</table>

	<a class="btn btn-primary mb-2" href="{{ path('genre_index') }}">back to list</a>

	{% if app.user and app.user.roles[0]=="ROLE_ADMIN"%}
		{{ include('genre/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
